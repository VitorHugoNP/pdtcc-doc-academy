@model pdtcc_doc_academy.Models.Solicitacoes
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Criar Solicitação";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarSolicitacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enviar Solicitação" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
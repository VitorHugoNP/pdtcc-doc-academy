@model pdtcc_doc_academy.Models.Funcionarios

@{
    ViewData["Title"] = "Login de Funcionários";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="EmailFuncionario"></label>
        <input asp-for="EmailFuncionario" class="form-control" />
        <span asp-validation-for="EmailFuncionario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SenhaFuncionario"></label>
        <input asp-for="SenhaFuncionario" class="form-control" type="senha_func" />
        <span asp-validation-for="SenhaFuncionario" class="text-danger"></span>
    </div>

    <a asp-controller="Funcionarios" asp-action="Cadastrar"> cadastre-se como diretor </a>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <strong>@ViewBag.ErrorMessage</strong>
        </div>
    }

    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

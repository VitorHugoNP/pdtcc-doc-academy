@{
}
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>
    <div>
        <label>Senha:</label>
        <input type="password" name="senha" required />
    </div>
    <button type="submit">Entrar</button>
</form>

@if (ViewBag.Erro != null)
{
    <p style="color: red;">@ViewBag.Erro</p>
}

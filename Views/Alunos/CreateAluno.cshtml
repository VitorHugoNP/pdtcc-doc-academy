@model pdtcc_doc_academy.Models.Alunos

@{
    ViewData["Title"] = "Registro de Aluno";
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            color: #212529; /* Dark gray text */
        }

        .form-container {
            background-color: #ffffff; /* White background */
            border: 2px solid #000000; /* Black border */
            border-radius: 10px; /* Rounded borders */
            padding: 20px; /* Internal spacing */
        }

        .welcome h4 {
            color: #000000; /* Black text */
        }

        footer {
            background-color: #f8f9fa; /* Light gray footer */
            color: #212529; /* Dark gray text */
        }
    </style>
</head>
<body>
    <main>
        <div class="d-flex justify-content-around border-primary">
            <div class="contents order">
                <div class="container col-md-12 card border-dark rounded">
                    <div class="row align-items-center justify-content-md-center">
                        <div class="col-md-12">
                            <div id="welcome-message" class="welcome">
                                <div class="d-flex align-items-center">
                                    <h4 class="mx-auto" style="font-size: 40px;">DocAcademy</h4>
                                    <img src="~/images/logofoda.png" class="rounded mx-auto" style="height: auto; width: 100px;" />
                                </div>
                                <br>
                                <div class="form-container">
                                    <h4>Registro de Aluno</h4>
                                    <h3 class="mb-4" style="font-size: 20px;">Bem-vindo ao DocAcademy! Faça seu cadastro para acessar nossa plataforma.</h3>
                                    <form asp-action="CreateAluno" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="nomeAluno" class="control-label"></label>
                                            <input asp-for="nomeAluno" class="form-control" required />
                                            <span asp-validation-for="nomeAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="cpfAluno" class="control-label"></label>
                                            <input asp-for="cpfAluno" class="form-control" required />
                                            <span asp-validation-for="cpfAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="rgAluno" class="control-label"></label>
                                            <input asp-for="rgAluno" class="form-control" required />
                                            <span asp-validation-for="rgAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="rmAluno" class="control-label"></label>
                                            <input asp-for="rmAluno" class="form-control" required />
                                            <span asp-validation-for="rmAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="emailAluno" class="control-label"></label>
                                            <input asp-for="emailAluno" class="form-control" required />
                                            <span asp-validation-for="emailAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="senhaAluno" class="control-label"></label>
                                            <input asp-for="senhaAluno" type="password" class="form-control" required />
                                            <span asp-validation-for="senhaAluno" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="serieCurso">Selecione a Série do Aluno:</label>
                                            <select name="serieCurso" id="serieCurso" class="form-control" required>
                                                <option value="">Selecione uma Série</option>
                                                <option value="1 ano">1 ano</option>
                                                <option value="2 ano">2 ano</option>
                                                <option value="3 ano">3 ano</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="cursoId">Selecione o Curso</label>
                                            <select id="cursoId" name="cursoId" class="form-control" required>
                                                <option value="">-- Selecione um Curso --</option>
                                                @foreach (var curso in ViewBag.Curso)
                                                {
                                                    <option value="@curso.IdCurso">@curso.nomecurso</option>
                                                }
                                            </select>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Criar Aluno</button>
                                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="text-center py-4">
        <p>&copy; 2024 Portal Acadêmico. Todos os direitos reservados.</p>
    </footer>
    <!--scripts-->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="https://kit.fontawesome.com/92c2a44805.js" crossorigin="anonymous"></script>
</body>
</html>
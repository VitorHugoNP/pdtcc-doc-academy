@model pdtcc_doc_academy.ViewModels.LoginViewModel

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            color: #212529; /* Dark gray text */
        }

        .form-container {
            background-color: #ffffff; /* White background */
            border: 5px solid #000000; /* Black border */
            border-radius: 10px; /* Rounded borders */
            padding: 20px; /* Internal spacing */
        }

        .welcome h3 {
            color: #212529; /* Dark gray for text */
        }

        .navbar {
            background-color: #343a40; /* Dark background for navbar */
        }

        .navbar-brand, .nav-link {
            color: #ffffff; /* White text for navbar */
        }

            .nav-link:hover {
                color: #f8f9fa; /* Light gray on hover */
            }

        footer {
            background-color: #f8f9fa; /* Light gray footer */
            color: #212529; /* Dark gray text */
        }

        .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
            border-color: #007bff; /* Bootstrap primary border */
        }

        .btn-primary:hover {
                background-color: #0056b3; /* Darker blue on hover */
                border-color: #0056b3; /* Darker blue border on hover */
        }
    </style>
</head>
<body>
    <main class="align-cen">
        <div class="d-flex justify-content-around border-primary">
            <div class="contents order-2 order-md-1">
                <div class="container col-md-12 card border-dark rounded">
                    <div class="row align-items-center justify-content-center" style="background-color: #f8f9fa;">
                        <div class="col-md-8">
                            <div id="welcome-message" class="welcome">
                                <div class="elements d-flex align-items-center">
                                    <h4 style="font-size: 40px;">DocAcademy</h4>
                                    <img src="~/images/Logofoda.png" class="rounded mx-auto" style="height: auto; width: 110px;"/>
                                </div>
                                <br>
                                <div class="form-container">
                                    <h4>Login Acadêmico</h4>
                                    <h3 class="mb-4" style="font-size: 18px;">Bem-vindo de volta ao DocAcademy! Faça seu login para acessar nossa plataforma.</h3>
                                    <form id="login-form" asp-action="Login" method="post">
                                        <div class="form-group first rounded mb-4">
                                            <label asp-for="Email"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group last mb-4 border-dark">
                                            <label asp-for="Senha"></label>
                                            <input asp-for="Senha" class="form-control" type="password" />
                                            <span asp-validation-for="Senha" class="text-danger"></span>
                                        </div>
                                        <p class="mt-3"> não possui um cadastro? <a asp-action="Create" asp-controller="Escolas">Cadastre sua Escola</a></p>
                                        <button type="submit" class="btn btn-primary">Entrar</button>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="text-center py-4">
        <p>&copy; 2024 Portal Acadêmico. Todos os direitos reservados.</p>
    </footer>
    <!--scripts-->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="https://kit.fontawesome.com/92c2a44805.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
@model pdtcc_doc_academy.ViewModels.LoginViewModel

<link href="~/css/style-login-form.css" rel="stylesheet" />
<script src="~/js/main-login.js"></script>
<div class="d-lg-flex half border-primary">
    <div class="bg order-1"></div>
    <div class="contents order-2 order-md-1">
        <div class="container col-md-12 card rounded">
            <div class="row align-items-center justify-content-center" style="background-color: #ffffff;">
                <div class="col-md-12">
                    <div id="welcome-message" class="welcome">
                        <div class="elements d-flex align-items-center">
                            <h4 style="font-size: 40px;">DocAcademy</h4>
                            <img src="~/images/logofoda.png" class="rounded mx-auto" style="height: auto; width: 100px;" />
                        </div>
                        <br>
                        <div class="form-container">
                            <h4>Login Acadêmico</h4>
                            <h3 class="mb-4" style="font-size: 18px;">Bem-vindo de volta ao DocAcademy! Faça seu login para acessar nossa plataforma.</h3>
                            <form id="login-form" asp-action="Login" method="post">
                                <div class="form-group first rounded mb-4 pt-4">
                                    <label asp-for="Email"><p>Email</p></label>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-4 pt-4 border-dark">
                                    <label asp-for="Senha">Senha</label>
                                    <input asp-for="Senha" class="form-control" type="password" required />
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                                <p class="mt-3">Não tem Login? <a asp-action="Create" asp-controller="Escolas">Crie sua conta</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

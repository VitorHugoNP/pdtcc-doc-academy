@model pdtcc_doc_academy.Models.Curso

<h2>Deletar Curso</h2>

<h4>Tem certeza que deseja deletar este curso?</h4>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.IdCurso</dd>

        <dt class="col-sm-2">Nome do Curso</dt>
        <dd class="col-sm-10">@Model.nomecurso</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdCurso" />
    <div class="form-group">
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@model pdtcc_doc_academy.Models.Escola

@{
    ViewData["Title"] = "Registro Acadêmico";
}
<link href="~/css/style-register-form.css" rel="stylesheet" />
<script src="~/js/main-register.js"></script>
<div class="d-lg-flex half border-primary">
    <div class="bg order-2"></div>
    <div class="contents order-2 order-md-2">
        <div class="container col-md-20 card rounded">
            <div class="row align-items-center justify-content-md-center" style="background-color: #ffffff;">
                <div class="col-md-20">
                    <div id="welcome-message" class="welcome">
                        <div class="d-flex align-items-center">
                            <h4 class="mx-auto" style="font-size: 40px;">DocAcademy</h4>
                            <img src="~/images/logofoda.png" class="rounded mx-auto" style="height: auto; width: 90px;" />
                        </div>
                        <br>
                        <div class="form-container">
                            <h4>Registro de Escola</h4>
                            <h3 class="mb-4" style="font-size: 20px;">Bem-vindo ao DocAcademy! Faça seu cadastro para acessar nossa plataforma.</h3>
                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group first rounded mb-2">
                                    <label asp-for="nomeEscola" class="control-label"><p>Nome da Escola</p></label>
                                    <input asp-for="nomeEscola" class="form-control" required />
                                    <span asp-validation-for="nomeEscola" class="text-danger"></span>
                                </div>
                                <div class="form-group rounded mb-2">
                                    <label asp-for="emailEscola" class="control-label"><p>Email</p></label>
                                    <input asp-for="emailEscola" class="form-control" required />
                                    <span asp-validation-for="emailEscola" class="text-danger"></span>
                                </div>
                                <div class="form-group rounded mb-2">
                                    <label asp-for="enderecoEscola" class="control-label"><p>Endereço</p></label>
                                    <input asp-for="enderecoEscola" class="form-control" required />
                                    <span asp-validation-for="enderecoEscola" class="text-danger"></span>
                                </div>
                                <div class="form-group rounded last mb-2 border-dark">
                                    <label asp-for="senhaEscola" class="control-label"><p>Senha</p></label>
                                    <input asp-for="senhaEscola" class="form-control" type="password" required />
                                    <span asp-validation-for="senhaEscola" class="text-danger"></span>
                                </div>
                                <div class="d-flex mb-3 align-items-center">
                                    <label class="control control--checkbox mb-0">
                                        <span class="caption">Lembre de mim</span>
                                        <input type="checkbox" checked="checked" />
                                        <div class="control__indicator"></div>
                                    </label>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary">Registrar</button>
                                <p class="mt-3">Já tem Login? <a asp-action="Login" asp-controller="Autenticacao">Acesse sua conta</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
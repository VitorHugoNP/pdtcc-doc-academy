@model IEnumerable<pdtcc_doc_academy.Models.Protocolo>

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../fonts/icomoon/style.css">
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .links {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .dashboard {
            padding: 2rem;
            background-color: #fff;
            margin-top: 2rem;
            border-radius: 10px;
        }

        .welcome-message {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-message h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #007bff;
        }

        .table {
            margin-top: 1rem;
            border-collapse: collapse;
            width: 100%;
        }

        .table th, .table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

        .footer {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #666;
        }
    </style>
    <title>Selecionar Protocolo</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded-bottom">
            <a class="navbar-brand mx-auto" href="#">
                <i class="fas fa-school" style="color: white;"></i>
                <span class="ms-auto" style="color: white; padding: 2rem;">DocAcademy</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto links">
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index", "Escolas")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Escolas" asp-action="VerProtocolos">Ver Protocolo</a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Autenticacao" asp -action="Logout" method="post">
                            <button type="submit" class="btn btn-link nav-link">Sair da conta</button>
                        </form>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("CreateAluno", "Alunos")">Cadastrar Aluno</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("CadastrarFuncionario", "Funcionarios")">Cadastrar Funcionario</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container mt-4">
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tipo de Documento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var protocolo in Model)
                        {
                            <tr>
                                <td>@protocolo.idProtocolo</td>
                                <td>@protocolo.tipo_Doc</td>
                                <td>
                                    <a asp-controller="Protocolos" asp-action="DownloadPdf" asp-route-idProcolo="@protocolo.idProtocolo" class="btn btn-primary">Baixar PDF</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">Nenhum protocolo encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
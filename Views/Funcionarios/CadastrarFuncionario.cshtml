@model pdtcc_doc_academy.Models.Funcionario

@{
    ViewData["Title"] = "Registro de Funcionário";
}
<link href="~/css/style-createaluno.css" rel="stylesheet" />
<body>
    <main>
        <div class="d-flex justify-content-around border-primary">
            <div class="contents order">
                <div class=" col-md-20 card border-dark rounded">
                    <div class="row align-items-center justify-content-md-center">
                        <div class="col-md-20">
                            <div id="welcome-message" class="welcome">
                                <div class="d-flex align-items-center">
                                    <h4 class="mx-auto" style="font-size: 40px;">DocAcademy</h4>
                                    <img src="~/images/logofoda.png" class="rounded mx-auto" style="height: auto; width: 100px;" />
                                </div>
                                <br>
                                <div class="form-container">
                                    <h4>Registro de Funcionário</h4>
                                    <form asp-action="CadastrarFuncionario" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="nome_func" class="control-label"></label>
                                            <input asp-for="nome_func" class="form-control" required />
                                            <span asp-validation-for="nome_func" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="email_func" class="control-label"></label>
                                            <input asp-for="email_func" class="form-control" required />
                                            <span asp-validation-for="email_func" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="senha_func" class="control-label"></label>
                                            <input asp-for="senha_func" class="form-control" type="password" required />
                                            <span asp-validation-for="senha_func" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                                            <a asp-action="Index" asp-controller="Escolas" class="btn btn-secondary">Cancelar</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
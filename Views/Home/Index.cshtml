@{
    ViewData["Title"] = "Login de Funcionários";
}

<h2>Login</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red;">
        <strong>@ViewBag.ErrorMessage</strong>
    </div>
}
<ul class="list-group">
    <li class="list-group-item"><a asp-area="Funcionario" asp-controller="Funcionarios" asp-action="login"> Entrar como Funcionário</a></li>
    <li class="list-group-item"><a asp-area="Escola" asp-controller="Escolas" asp-action="Login"> Entrar como Escola</a></li>
</ul>
<form method="post">
    <div>
        <label for="username">Nome de Usuário</label>
        <input type="text" id="username" name="username" required />
    </div>
    <div>
        <label for="password">Senha</label>
        <input type="password" id="password" name="password" required />
    </div>
    <div>
        <button type="submit">Entrar</button>
    </div>
</form>

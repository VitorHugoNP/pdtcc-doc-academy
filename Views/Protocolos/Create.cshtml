@{
    Layout = null; // Set this if you are not using a layout page
}
@model IEnumerable<pdtcc_doc_academy.Models.Protocolo>
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../fonts/icomoon/style.css">
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            color: #212529; /* Dark gray text */
        }

        header {
            background-color: #000000; /* Black background for header */
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff; /* White text for navbar links */
        }

        .navbar-dark .navbar-nav .nav-link:hover {
            color: #f8f9fa; /* Light gray on hover */
        }

        .card {
            background-color: #ffffff; /* White background for cards */
            border: 1px solid #dee2e6; /* Light gray border */
        }

        .card-title {
            color: #212529; /* Dark gray for card titles */
        }

        .btn-primary {
            background-color: #000000; /* Black for primary button */
            border-color: #000000; /* Black border */
        }

        .btn-danger {
            background-color: #dc3545; /* Bootstrap danger color */
            border-color: #dc3545; /* Bootstrap danger border */
        }

        footer {
            background-color: #f8f9fa; /* Light gray footer */
            color: #212529; /* Dark gray text */
        }

        .form-group label {
            color: #000000; /* Black for labels */
        }
    </style>
    <title>Documentos</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark rounded-bottom">
            <a class="navbar-brand mx-auto" href="#">
                <i class="fas fa-school" style="color: white;"></i>
                <span class="ms-auto" style="color: white;">DocAcademy</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto links">
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index", "Alunos")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Create", "Protocolos")>Documentos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="../../user_profile/html/index.html" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img id="navbarProfileImage" src="https://via.placeholder.com/30" width="30" height="30" class="ms-auto rounded-circle" alt="">
                            <span id="navbarUser  Name"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container mt-4">
            <h2>Minhas Requisições</h2>

            <!-- Formulário para selecionar o tipo de documento -->
            <form asp-controller="Protocolos" asp-action="CreateProtocolo" method="post">
                <div class="form-group">
                    <label for="selectedOption">Selecione o Tipo de Documento:</label>
                    <select id="selectedOption" name="selectedOption" class="form-control">
                        <option value="1">Atestado de Matrícula</option>
                        <option value="2">Autorização</option>
                        <option value="3">Comunicado</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Requisitar</button>
            </form>


@*             ----Em desenvolvimento----- *@

@*             <div class="card-container mt-4">
                @foreach (var document in Model)
                {
                    <div class="card">
                        <img src="../img/images.jpg" class="img-thumbnail w-25" alt="Requerimento">
                        <div class="card-body">
                            <h5 class="card-title">@document.tipo_Doc</h5>
                            <a asp-controller="Protocolos" asp-action="DownloadPdf" asp-route-idProcolo="@document.idProtocolo" class="btn btn-primary">Baixar PDF</a>
                            <button class="btn btn-danger">Excluir Documento</button>
                        </div>
                    </div>
                }
            </div> *@


            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tipo de Documento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var protocolo in Model)
                        {
                            <tr>
                                <td>@protocolo.idProtocolo</td>
                                <td>@protocolo.tipo_Doc</td>
                                <td>
                                    <a asp-controller="Protocolos" asp-action="DownloadPdf" asp-route-idProcolo="@protocolo.idProtocolo" class="btn btn-primary">Baixar PDF</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">Nenhum protocolo encontrado para este aluno.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
    <br>
    <footer class="text-center py-4" style="background-color: #f8f9fa; color: #212529;">
        <p>&copy; 2024 Portal Acadêmico. Todos os direitos reservados.</p>
    </footer>
    <!--scripts-->
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/popper.min.js"></script>
    <script src="../js/jquery-3.3.1.min.js"></script>
    <script src="../js/main.js"></script>
    <script src="https://kit.fontawesome.com/92c2a44805.js" crossorigin="anonymous"></script>+
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
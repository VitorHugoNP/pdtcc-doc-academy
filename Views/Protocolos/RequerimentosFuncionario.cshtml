@{
    ViewData["Title"] = "Requisitar Documento";
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../fonts/icomoon/style.css">
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .dashboard {
            padding: 2rem;
            background-color: #fff;
            margin-top: 2rem;
            border-radius: 10px;
        }

        .welcome-message {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-message h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #007bff;
        }

        .footer {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #666;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded-bottom">
            <a class="navbar-brand mx-auto" href="#">
                <i class="fas fa-school" style="color: white;"></i>
                <span class="ms-auto" style="color: white; padding: 2rem;">DocAcademy</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index", "Alunos")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Protocolos" asp-action="create">Solicitar protocolo</a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Autenticacao" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-link nav-link">Sair</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container mt-4 dashboard">
            <div class="welcome-message">
                <h1>@ViewData["Title"]</h1>
            </div>
            <form asp-action="RequerimentosFuncionario" method="post">
                <div class="form-group">
                    <label for="selectedOption">Selecione o Tipo de Documento:</label>
                    <select id="selectedOption" name="selectedOption" class="form-control">
                        <option value="1">Atestado de Matrícula</option>
                        <option value="2">Autorização</option>
                        <option value="3">Comunicado</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alunoSelect">Escolha um aluno:</label>
                    <select id="alunoSelect" name="idAluno" class="form-control">
                        @foreach (var aluno in ViewBag.Alunos)
                        {
                            <option value="@aluno.idAluno">@aluno.nomeAluno</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Requisitar</button>
            </form>
        </div>
    </main>
    <footer class="text-center py-4" style="background-color: #f8f9fa; color: #212529;">
        <p>&copy; 2024 Portal Acadêmico. Todos os direitos reservados.</p>
    </footer>
    <!--scripts-->
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/popper.min.js"></script>
    <script src="../js/jquery-3.3.1.min.js"></script>
    <script src="../js/main.js"></script>
    <script src="https://kit.fontawesome.com/92c2a44805.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>